<div class="d-flex justify-content-center">
  <% if  pagination.previous_page? %>
    <%= link_to 'First', people_path(page: 1), class: "btn btn-outline-secondary me-2" %>
    <%= link_to '< Previous', people_path(page: pagination.previous_page), class: "btn btn-outline-secondary me-4" %>
  <% else %>
    <span class="btn btn-outline-secondary me-2 disabled">First</span>
    <span class="btn btn-outline-secondary me-4 disabled">&#60; Previous</span>
  <% end %>
  <p class="mt-2"><%= "Page #{pagination.page} of #{pagination.total_pages}" %></p>
  <% if pagination.next_page? %>
    <%= link_to 'Next >', people_path(page: pagination.next_page), class: "btn btn-outline-secondary ms-4 me-2" %>
    <%= link_to 'Last', people_path(page: pagination.total_pages), class: "btn btn-outline-secondary ms-2" %>
  <% else %>
    <span class="btn btn-outline-secondary ms-4 me-2 disabled">Next &#62;</span>
    <span class="btn btn-outline-secondary ms-2 disabled">Last</span>
  <% end %>
</div>

